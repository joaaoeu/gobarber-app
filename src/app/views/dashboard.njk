{% extends "_layouts/default.njk" %}

{% block body %}
  <div class="content">
    <strong>Hello, {{ user.name }}</strong>
    <p>Init an appointment choosing a barber below!</p>

    <ul>
      {% for provider in providers %}
        <li class="provider">
          <div>
            <img src="/file/{{ provider.avatar }}" />
            <strong>{{ provider.name }}</strong>
          </div>
          <a href="">+</a>
        </li>
      {% endfor %}
    </ul>

    <a href="/app/logout" class="logout">Logout</a>
  </div>
{% endblock %}
